{
  "name": "@simlin/engine",
  "version": "2.0.0",
  "description": "an engine for building, running and analyzing system dynamics models",
  "repository": "http://github.com/bpowers/simlin",
  "author": {
    "name": "Bobby Powers",
    "email": "bobbypowers@gmail.com"
  },
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "browser": "lib.browser/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "module": "./lib.browser/index.js",
      "node": "./lib/index.js"
    },
    "./internal/wasm": {
      "module": "./lib.browser/internal/wasm.browser.js",
      "node": "./lib/internal/wasm.node.js"
    },
    "./*": {
      "module": "./lib.browser/*.js",
      "node": "./lib/*.js"
    }
  },
  "sideEffects": false,
  "files": [
    "lib",
    "lib.browser",
    "core"
  ],
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^30.2.0",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "needs-format": "prettier -l 'src/**/*.ts' 'tests/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "lint": "eslint src",
    "clean": "rm -rf ./lib ./lib.browser ./core",
    "build": "./build.sh",
    "tsc": "tsc",
    "test": "jest",
    "test:watch": "jest --watch"
  }
}
