{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "lib",
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "paths": {
      "@simlin/engine/internal/wasm": ["src/internal/wasm.node.ts"],
      "@simlin/engine/internal/backend-factory": ["src/backend-factory.node.ts"],
      "@simlin/engine/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["lib", "lib.browser", "src/internal/wasm.browser.ts", "src/backend-factory.browser.ts", "src/engine-worker.ts", "tests", "eslint.config.js"]
}
