{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "..",
    "outDir": "lib.browser",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../**/*.ts",
    "../**/*.tsx"
  ],
  "exclude": [
    "lib",
    "lib.browser",
    "../**/tests/**",
    "../**/test/**",
    "../**/*.test.ts",
    "../**/*.spec.ts",
    "../server/**",
    "../**/node_modules/**",
    "../engine2/src/internal/wasm.node.ts",
    "../xmutil-js/index.node.ts"
  ],
  "references": [
    { "path": "../core/tsconfig.json" },
    { "path": "../diagram/tsconfig.json" },
    { "path": "../engine2/tsconfig.browser.json" },
    { "path": "../xmutil-js/tsconfig.browser.json" }
  ]
}
