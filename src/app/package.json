{
  "name": "@simlin/app",
  "version": "1.0.0",
  "description": "Simlin web frontend",
  "repository": "http://github.com/bpowers/simlin",
  "author": "Bobby Powers <bobbypowers@gmail.com>",
  "license": "Apache-2.0",
  "browser": "lib.browser",
  "dependencies": {
    "@simlin/core": "workspace:*",
    "@simlin/diagram": "workspace:*",
    "@simlin/engine": "workspace:*",
    "clsx": "^2.1.1",
    "js-base64": "^3.7.8",
    "katex": "^0.16.28",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@firebase/app": "^0.14.7",
    "@firebase/auth": "^1.12.0",
    "@rsbuild/core": "^1.7.3",
    "@rsbuild/plugin-node-polyfill": "^1.4.3",
    "@rsbuild/plugin-react": "^1.4.5",
    "@rsbuild/plugin-type-check": "^1.3.3",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.11",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "browserslist": "^4.28.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jest": "^30.2.0",
    "picocolors": "^1.1.1",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "wouter": "^3.9.0"
  },
  "scripts": {
    "needs-format": "prettier -l '**/*.ts' '**/*.tsx'",
    "format": "prettier --write '**/*.ts' '**/*.tsx'",
    "lint": "eslint .",
    "prepublishOnly": "pnpm build",
    "deploy": "cp -r build/* public && cp -r build-component/static/js/* ./public/static/js/ && cp -r build-component/static/wasm/* ./public/static/wasm/ && rm public ../server/public ../server/default_projects",
    "deploy-clean": "git checkout HEAD -- ../../public/index.html ./public ../server/public ../server/default_projects && rm -r public/asset-manifest.json public/static/js public/static/wasm build build-component",
    "clean": "rm -rf ./lib.browser ./build ./build-component ./node_modules/.cache",
    "build": "pnpm run build:frontend && pnpm run build:webcomponent",
    "build:tsc": "tsc -p tsconfig.browser.json",
    "build:webcomponent": "node scripts/build-component.js",
    "build:frontend": "node scripts/build.js",
    "start:frontend": "node scripts/start.js",
    "test": "jest"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 1 Safari versions",
    "last 1 ios_saf versions"
  ],
  "proxy": "http://localhost:3030"
}
