{
  "name": "@system-dynamics/engine2",
  "version": "2.0.0",
  "description": "an engine for building, running and analyzing system dynamics models",
  "repository": "http://github.com/bpowers/simlin",
  "author": {
    "name": "Bobby Powers",
    "email": "bobbypowers@gmail.com"
  },
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "browser": "lib.browser/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "module": "./lib.browser/index.js",
      "node": "./lib/index.js"
    },
    "./internal/wasm": {
      "module": "./lib.browser/internal/wasm.browser.js",
      "node": "./lib/internal/wasm.node.js"
    },
    "./*": {
      "module": "./lib.browser/*.js",
      "node": "./lib/*.js"
    }
  },
  "sideEffects": false,
  "files": [
    "lib",
    "lib.browser",
    "core"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.7.2",
    "jest": "^30.0.0",
    "@types/jest": "^30.0.0",
    "ts-jest": "^29.4.0"
  },
  "scripts": {
    "needs-format": "prettier -l 'src/**/*.ts' 'tests/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "lint": "eslint src",
    "clean": "rm -rf ./lib ./lib.browser ./core",
    "build": "./build.sh",
    "test": "jest",
    "test:watch": "jest --watch"
  }
}
