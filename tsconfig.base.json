{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "target": "ES2020",
    "lib": ["ES2020"],
    "composite": true,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "paths": {
      "@system-dynamics/*": [
        "src/*"
      ]
    }
  }
}
